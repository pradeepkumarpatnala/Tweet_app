package com.tweetapp.dao;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.SQLException;
import java.util.Scanner;

import com.tweetapp.model.User;
import com.tweetapp.util.DBUtil;

/**
 * @author User
 *
 */
public class UserDao {
	
	public void  registerUser(User user) {
		PreparedStatement preparedStatement = null;
		Connection conn = DBUtil.createNewDBconnection();
		String insertQueryStatement = "INSERT  INTO  user  VALUES  (?,?,?,?,?,?)";
		try {
			preparedStatement=conn.prepareStatement(insertQueryStatement);
			preparedStatement.setString(1, user.getUsername());
			preparedStatement.setString(1, user.getFirstnme());
			preparedStatement.setString(1, user.getLastname());
			preparedStatement.setString(1, user.getPassword());
			preparedStatement.setString(1, user.getGender());
			preparedStatement.setBoolean(1, user.isIsloggedin());
		
			
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
		
			
			
			
	
		
	}

}
